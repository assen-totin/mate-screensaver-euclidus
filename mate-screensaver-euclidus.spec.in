%{iconsdir}/hicolor/24x24/apps/applet_livescore.png
%{iconsdir}/hicolor/32x32/apps/applet_livescore.png
%{_datadir}/mate-panel/applets/org.mate.applets.LivescoreApplet.mate-panel-applet
